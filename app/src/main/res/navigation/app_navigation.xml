<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.amrullaev.eldormuqimov.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_homeFragment_to_aboutMusicFragment"
            app:destination="@id/aboutMusicFragment" />
    </fragment>
    <fragment
        android:id="@+id/musicFragment"
        android:name="com.amrullaev.eldormuqimov.ui.MusicFragment"
        android:label="fragment_music"
        tools:layout="@layout/fragment_music" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.amrullaev.eldormuqimov.ui.AboutFragment"
        android:label="AboutFragment" />
    <fragment
        android:id="@+id/aboutMusicFragment"
        android:name="com.amrullaev.eldormuqimov.ui.AboutMusicFragment"
        android:label="fragment_about_music"
        tools:layout="@layout/fragment_about_music" />
</navigation>